@inherits LayoutComponentBase

<MudThemingProvider/>
<MudLayout>
    <MudAppBar Color="Color.Surface" Elevation="4">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" @onclick="ToggleDrawer"/>
        <MudSpacer/>
        <MudFab Color="Color.Dark"
                @onclick="ConfigDrawer" 
                StartIcon="@Icons.Material.Filled.Settings"
                Size="Size.Medium"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_openMenu" Elevation="1">
        <NavMenu/>
    </MudDrawer>
    <MudDrawer @bind-Open="@_openConfig" Anchor="Anchor.End" Elevation="1" Variant="@DrawerVariant.Temporary">
        <ConfigMenu/>
    </MudDrawer>
    <MudMainContent Class="pt-16 px-16">
        @Body
    </MudMainContent>
</MudLayout>


@code{
    private bool _openMenu = false;
    private bool _openConfig = false;

    void ToggleDrawer()
    {
        _openMenu = !_openMenu;
    }
    
    void ConfigDrawer()
    {
        _openConfig = !_openConfig;
    }
}

